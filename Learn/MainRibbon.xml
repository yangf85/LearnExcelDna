<?xml version="1.0" encoding="utf-8" ?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui"
		  onLoad="OnRibbonLoad">
	<ribbon>
		<tabs>
			<tab id="MainTab"
				 label="年轻人的第一个Excel插件">
				<group id="FirstGroup"
					   label="第一组">
					<button id="Find"
							label="查找方法"
							imageMso="FileFind"
							size="large"
							onAction="OnFindButtonClicked" />
				</group>
				<group id="SecondGroup"
					   label="第二组">
					<toggleButton id="ShowPane"
								  label="显示窗格"
								  imageMso="FreezePanes"
								  size="large"
								  onAction="OnShowPanePressed" />
					<button id="ShowWindow"
							onAction="OnShowWindowButtonClicked"
							size="large"
							label="显示窗口"
							imageMso="GroupWindowAccess" />
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>